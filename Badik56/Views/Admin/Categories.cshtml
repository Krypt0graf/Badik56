@{ Layout = "_LayoutAdmin"; }
@model List<Badik56.Models.Objects.Category>
<section>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <button id="button_menu" class="btn" style="width: 150px;" onclick="leftmenutoggle();">Скрыть меню</button>
                <div class="card-header">
                    <h4 class="card-title">Таблица редактирования категорий на <a href="https://badik56.ru">Badik56</a></h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            @*  <li><a data-action="collapse"><i class="ft-minus"></i></a></li>*@
                            <li><a data-action="reload" href="/Admin/Contacts"><i class="ft-rotate-cw"></i></a></li>
                            @*<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                    <li><a data-action="close"><i class="ft-x"></i></a></li>*@
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Название</th>
                                    <th scope="col">URL</th>
                                    <th scope="col">Действие</th>
                                </tr>
                            </thead>
                            <tbody>
                                @using (Html.BeginForm("Categories", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <tr>
                                        <td><input type="text" name="name" class="form-control" value="" /></td>
                                        <td><input type="text" name="url" class="form-control" value="" /></td>
                                        <td><button type="submit" class="btn btn-icon btn-success mr-1"><i class="ft-check"></i></button></td>
                                    </tr>
                                }
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    @using (Html.BeginForm("DeleteCategories", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <tr>
                                            <td><input type="text" name="name" class="form-control" value="@Model[i].Name" /></td>
                                            <td><input type="text" name="url" class="form-control" value="@Model[i].Url" /></td>
                                            <td><button type="submit" class="btn btn-icon btn-success mr-1"><i class="ft-delete"></i></button></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>