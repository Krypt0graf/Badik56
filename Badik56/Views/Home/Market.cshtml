@model Badik56.Models.PageObjects.MarketModel
@section Market{
    <link rel="stylesheet" type="text/css" href="~/styles/categories.css">
    <link rel="stylesheet" type="text/css" href="~/styles/categories_responsive.css">
}
<div class="wrapper-slider" id="main2">
    <div class="item-door" id="right"></div>
    <div class="item-door" id="left"></div>
    <div id="preloader">
        <div id="loader"></div>
    </div>
</div>
<div class="home">
    <div class="home_container">
        <div class="home_background market"></div>
        <div class="home_content_container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="home_content">
                            <div class="avds_large_container">
                                <div class="avds_large_content">
                                    <div class="home_title">@Model.SelectedCategory<span>.</span></div>
                                    <div class="home_text"><p>В нашем магазине вы найдете полный ассортимент того, что есть в наличии и под заказ</p></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Products -->
<div class="products">
    <div class="container">
        <div class="row">
            <div class="col">
                <!-- Product Sorting -->
                <div class="sorting_bar d-flex flex-md-row flex-column align-items-md-center justify-content-md-start">
                    <div class="results">Показано <span>@Model.Products.Count</span> товаров</div>
                    <div class="sorting_container ml-md-auto">
                        <div class="sorting">
                            <ul class="item_sorting">
                                <li>
                                    <span class="sorting_text">Сортировать по</span>
                                    <i class="fa fa-chevron-down" aria-hidden="true"></i>
                                    <ul>
                                        <li class="product_sorting_btn" data-isotope-option='{ "sortBy": "original-order" }'><span>Самые новые</span></li>
                                        <li class="product_sorting_btn" data-isotope-option='{ "sortBy": "price" }'><span>По цена</span></li>
                                        <li class="product_sorting_btn" data-isotope-option='{ "sortBy": "stars" }'><span>По имени</span></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">

                <div class="product_grid">

                    <!-- Product -->
                    @for (int i = 0; i < Model.Products.Count; i++)
                    {
                        @if (Model.Products[i].Count <= 0)
                        {
                            continue;
                        }
                        <div class="product">
                            <div class="product_image"><img src="/images/products/@Model.Products[i].Image[0].Name" alt=""></div>
                            @*<div class="product_extra product_new"><a href="categories.html">New</a></div>*@
                            <div class="product_content">
                                <div class="product_title"><a href="/Home/Product/?id=@Model.Products[i].Id">@Model.Products[i].Name</a></div>
                                <div class="product_price">@Model.Products[i].Price ₽</div>
                            </div>
                        </div>
                    }
                </div>
                <div class="product_pagination">
                    <ul>
                        <li class="active"><a href="#">01.</a></li>
                        <li><a href="#">02.</a></li>
                        <li><a href="#">03.</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
